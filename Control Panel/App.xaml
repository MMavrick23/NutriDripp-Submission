<Application x:Class="NutriDripp_CP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:NutriDripp_CP.Converters"
             StartupUri="Splash.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Windows.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="FontAwesome_Regular">/Resources/Fonts/FontAwesome6Regular.otf#Font Awesome 6 Free Regular</FontFamily>
            <FontFamily x:Key="FontAwesome_Solid">/Resources/Fonts/FontAwesome6Solid.otf#Font Awesome 6 Free Solid</FontFamily>
            
            <converters:BrushToColorConverter x:Key="BrushToColor"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
